#!/usr/bin/env bash

set -euo pipefail

log::generic() {
    local level
    level=$1
    shift

    printf "%s\t%s\n" "$level" "$*"
}

log::info() {
    log::generic INFO "$@"
}

log::fatal() {
    log::generic FATAL "$@"
    exit 1
}

lookup-remote-tag() {
    local remote tag tagfile tagcount
    remote=$1
    shift
    tag=$1
    shift

    tagfile=$(mktemp)

    git ls-remote --tags "$remote" "$tag" >"$tagfile"

    tagcount=$(wc -l <"$tagfile")

    if [[ $tagcount -lt 1 ]]; then
        log::fatal "no tags found on $remote for $tag!"
    fi

    if [[ $tagcount -gt 1 ]]; then
        log::fatal "found more than one tag matching $tag on $remote.  cowardly giving up!"
    fi

    awk '{ print $1;}' <"$tagfile"
    rm "$tagfile"
}

fetch-remote() {
    local remote
    remote=$1
    shift
    log::info "git fetching remote $remote..."
    git fetch "$remote"
}

default-build() {
    svmkit build agave "$@"
    mv target/debian/*.deb "../build/$ref/."
}

anza-build-extra() {
    default-build --build-extras "$@"
}

build-ref() {
    local ref target
    buildfunc=default-build
    package_prefix=$1
    shift
    ref=$1
    shift
    target=$1
    shift

    if [[ $# -gt 0 ]]; then
        buildfunc=$1
        shift
    fi

    log::info "building $ref -> $target..."
    mkdir -p "../build/$ref"
    git clean -f -d -x
    git checkout -f "$ref"
    git submodule update --init
    $buildfunc --package-prefix "$package_prefix" --validator-target "$target"
    git submodule deinit --all
    git checkout -f master
}

build-with-other-clang() {
    default-build --use-alternative-clang "$@"
}


build-grpc() {
    local agave_ver=$1
    local grpc_ref=$2
    local build_dir=$3

    log::info "â†’ yellowstone-grpc for $grpc_ref (agave_ver=$agave_ver)"
    mkdir -p "$build_dir"
    git clean -f -d -x
    git checkout -f "$grpc_ref"
    git submodule update --init
    svmkit build yellowstone-grpc --geyser-interface-version "$agave_ver"
    mv target/debian/*.deb "$build_dir/"
    git submodule deinit --all
    git checkout -f master
}

for remote in solana-labs anza-xyz PowerLedger jito-foundation pyth-network mantis xen tachyon yellowstone-grpc; do
    fetch-remote $remote
done

build-ref svmkit-solana solana-labs/master solana-validator

for tag in v2.1.13 v2.1.14 v2.1.15 v2.1.16 v2.1.21 v2.2.0 v2.2.1; do
    commit=$(lookup-remote-tag anza-xyz "$tag")
    build-ref svmkit-agave "$commit" agave-validator anza-build-extra
done

for tag in v5.0.1+solana.2.1.13 v5.0.1+solana.2.1.14 v5.0.1+solana.2.1.15 v5.0.1+solana.2.1.16 v6.0.0+solana.2.2.1
    commit=$(lookup-remote-tag yellowstone-grpc "$tag")
    agave_ver=$(echo "$tag" | sed 's|^v||;s|+solana.*$||')
    build_dir="../build/$commit"
    build-grpc "$agave_ver" "$grpc_ref" "$build_dir"
done

build-ref svmkit-powerledger PowerLedger/upgrade_to_v1.16.28 solana-validator

for tag in v2.0.18-jito v2.0.19-jito v2.0.21-jito v2.0.22-jito v2.1.7-jito v2.1.11-jito v2.1.13-jito v2.1.16-jito v2.1.21-jito; do
    build-ref svmkit-jito "$(lookup-remote-tag jito-foundation $tag)" agave-validator
done

build-ref svmkit-pyth pyth-network/pyth-v1.14.17 solana-validator build-with-other-clang

build-ref svmkit-mantis mantis/mantis/diet-validator-rpc solana-validator

build-ref svmkit-xen xen/dyn_fees_v1 solana-validator

build-ref svmkit-tachyon tachyon/dyn_fees_v2 tachyon-validator
